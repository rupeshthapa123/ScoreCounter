<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/basketball"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team A"
            android:gravity="center"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/ScoreTeamA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="60sp"
            android:padding="16dp"/>

        <Button
            android:id="@+id/APoint3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 Point"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:background="@color/purple_700"
            android:layout_margin="16dp"/>
        <Button
            android:id="@+id/APoint2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 Point"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:background="@color/purple_700"
            android:layout_margin="16dp" />
        <Button
            android:id="@+id/APoint1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 Point"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="32sp"
            android:background="@color/purple_700"
            android:layout_margin="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="50sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/ScoreTeamB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="60sp"
            android:padding="16dp"/>

        <Button
            android:id="@+id/BPoint3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 Point"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="32sp"
            android:background="@color/purple_700"
            android:layout_margin="16dp" />
        <Button
            android:id="@+id/BPoint2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 Point"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:background="@color/purple_700"
            android:layout_margin="16dp" />
        <Button
            android:id="@+id/BPoint1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 Point"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="32sp"
            android:background="@color/purple_700"
            android:layout_margin="16dp" />
    </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/ResetButton"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:background="@color/purple_700"
        android:text="Reset"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="30sp">

    </Button>

</RelativeLayout>